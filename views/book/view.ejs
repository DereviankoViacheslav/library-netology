<%- include("../partials/layout-start", {title: title}) %> <%-
include("../partials/menu") %>
<h1>Книга: <%= title %></h1>

<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Название:</h5>
        <p class="card-text"><%= book.title %>.</p>
        <h5 class="card-title">Описание:</h5>
        <p class="card-text"><%= book.description %>.</p>
        <h5 class="card-title">Авторы:</h5>
        <p class="card-text"><%= book.authors %>.</p>
        <h5 class="card-title">Фаворит:</h5>
        <p class="card-text"><%= book.favorite %>.</p>
        <h5 class="card-title">Обложка:</h5>
        <p class="card-text"><%= book.fileCover %>.</p>
        <h5 class="card-title">Имя файла:</h5>
        <p class="card-text"><%= book.fileName %>.</p>
        <h5 class="card-title">Количество просмотров:</h5>
        <p class="card-text"><%= book.counter %>.</p>

        <div class="text-right">
          <a
            class="btn btn-sm btn-primary"
            href="/books/update/<%= book._id %>"
          >
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
          <a
            class="btn btn-sm btn-primary"
            href="/books/download/<%= book._id %>"
          >
            <i class="fa fa-download" aria-hidden="true"></i>
          </a>
          <form
            action="/books/delete/<%= book._id %>"
            method="POST"
            class="d-inline"
          >
            <button class="btn btn-sm btn-danger">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<h3>Комментарии к книге</h3>

<div class="row">
  <div class="col-4">
    <div id="list" class="list-group"></div>
  </div>
</div>

<div class="row">
  <div class="col-4">
    <div class="form-group">
      <label for="username">Имя пользователя</label>
      <input
        placeholder="Введите имя"
        type="text"
        id="username"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="text">Комментарий</label>
      <textarea placeholder="Комментарий..." class="form-control" id="text"></textarea>
    </div>
    <button type="submit" id="send-room" class="btn btn-primary">
      Отправить
    </button>
  </div>
</div>

<%- include("../partials/layout-end") %>
